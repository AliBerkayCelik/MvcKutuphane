@using MvcKutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLUYELER>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/Layout.cshtml";
    }
<link href="~/Content/PagedList.css" rel="stylesheet" />
    <br />
    <h2>Personel Listesi</h2>
    <br />

    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Üye Adı/Soyadı</th>
           
            <th>Mail</th>
            <th>Kullanıcı Adı</th>
            <th>Şifresi</th>
            <th>Telefon</th>
            <th>Okul</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var uye in Model)
        {
            <tr>
                <td>@uye.ID</td>
                <td>@uye.AD @uye.SOYAD</td>
                <td>@uye.MAIL</td>
                <td>@uye.KULLANICI</td>
                <td>@uye.SIFRE</td>
                <td>@uye.TELEFON</td>
                <td>@uye.OKUL</td>
                <td><a class="btn btn-danger" href="/Uye/UyeSil/@uye.ID">Sil</a></td>
                <td><a class="btn btn-success" href="/Uye/UyeGetir/@uye.ID">Güncelle</a></td>

            </tr>
        }
    </table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index",new {sayfa}))
    <a href="/Uye/UyeEkle/" class="btn btn-primary">Yeni Üye Ekle</a>

