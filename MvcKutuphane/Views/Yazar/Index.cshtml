@using MvcKutuphane.Models.Entity
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />
<h2>Yazarlar</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Detay</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var yazar in Model)
    {
        <tr>
            <td>@yazar.ID</td>
            <td>@yazar.AD</td>
            <td>@yazar.SOYAD</td>
            <td>@yazar.DETAY</td>
            <td>@Html.ActionLink("Sil","YazarSil",new {id=yazar.ID},new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyormusunuz?')" })</td>
            <td><a href="/Yazar/YazarGetir/@yazar.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Yazar/YazarEkle" class="btn btn-primary">Yazar Ekle</a>

