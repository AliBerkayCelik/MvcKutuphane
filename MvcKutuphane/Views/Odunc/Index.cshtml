@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<br />
<h2>Ödünç Kitap Listesi</h2>
<br />




<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Al</th>
        
    </tr>
    @foreach (var odunc in Model)
    {
        <tr>
            <td>@odunc.ID</td>
            <td>@odunc.TBLKITAP.AD</td>
            <td>@odunc.TBLUYELER.AD @odunc.TBLUYELER.SOYAD</td>
            <td>@odunc.TBLPERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(odunc.ALISTARIHI).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(odunc.IADETARIH).ToString("dd/MM/yyyy")</td>
            <td><a class="btn btn-warning" href="/Odunc/OduncIade/@odunc.ID">Kitabı İade Et</a></td>
           

        </tr>
    }
</table>



