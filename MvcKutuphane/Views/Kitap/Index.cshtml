@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />
<h2>Kitaplar Listesi</h2>
<br />
@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <p>
        Kitap Adı: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kitap Yazarı</th>
        <th>Kategori</th>
        <th>Basım Yılı</th>
        <th>Yayın Evi</th>
        <th>Sayfa</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var kitap in Model)
    {
        <tr>
            <td>@kitap.ID</td>
            <td>@kitap.AD</td>
            <td>@kitap.TBLYAZAR.AD @kitap.TBLYAZAR.SOYAD</td>
            <td>@kitap.TBLKATEGORI.AD</td>
            <td>@kitap.BASIMYIL</td>
            <td>@kitap.YAYINEVI</td>
            <td>@kitap.SAYFA</td>
            <td>@kitap.DURUM</td>
            <td><a class="btn btn-danger" href="/Kitap/KitapSil/@kitap.ID">Sil</a></td>
            <td><a class="btn btn-success" href="/Kitap/KitapGetir/@kitap.ID">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/Kitap/KitapEkle/" class="btn btn-primary">Yeni Kitap Ekle</a>
